---
title: Welcome
metaTitle: Hey, welcome
layout: layouts/base.njk
pagination:
  data: collections.post
  size: 8
  reverse: true
eleventyNavigation:
  key: Main
---
<div class="container content">
  <h1 class="sr-only">{{ title }}</h1>
  <ol class="post-list" role="list">
    {%- for post in pagination.items -%}
    <li>
      <article class="post-teaser">
        <div class="post-teaser__meta">
          <time class="meta-date">{{ post.date | dateFormatted }}</time>
        </div>
        <div class="post-teaser__body flow">
          <a class="post-teaser__title" href="{{ post.url }}">{{ post.data.title }}</a>
          <p>{{ post.data.description | safe }}</p>

          <div class="tag-list">
            <span class="sr-only" id="tags-label-{{ loop.index }}">Post tags</span>
            <ul role="list" aria-labelledby="tags-label-{{ loop.index }}">
              {% for tag in post.data.tags %}
              {% if tag != "post" %}
              <li><a href="/tags/{{ tag | slugify }}">#{{ tag }}</a></li>
              {% endif %}
              {% endfor %}
            </ul>
          </div>

        </div>
      </article>
    </li>
    {%- endfor -%}
  </ol>
  {% include "partials/pagination.njk" %}
</div>