---
title: Welcome
metaTitle: Hey, welcome
layout: layouts/base.njk
pagination:
  data: collections.post
  size: 8
  reverse: true
eleventyNavigation:
  key: Main
---
<div class="layout-container">
  <div class="layout-container__inner [ p-top-700 p-bottom-500 ]">
    <h1 class="sr-only">{{ title }}</h1>
    <div class="article-header p-right-300">
      <div class="article-header__body" style="--body-ideal-width: 620px;">
        <h2 class="article-header__title">Oh hey, <br> my name is Levi.</h2>
        <p class="article-header__description">I’m a web designer and front-end developer. I'm currently working on <a href="https://rivet.iu.edu/">Design Systems</a> in higher ed.</p>
      </div>
      <div class="article-header__hero">
        {% image "./src/img/hero-image.png", "Abstract collage", "(min-width: 45rem) 50vw, 100vw" %}
      </div>
    </div>
  </div>
</div>
<div class="layout-container">
  <div class="layout-container__inner [ p-top-600 p-bottom-700 ]">
    <div class="content-container flow">
      <h2 class="section-header section-header--primary">Recent <span>posts</span></h2>
      <ol class="list-reset auto-grid m-top-500">
      {% set recentPosts = collections.post | reverse %}
      {% for post in recentPosts.slice(0, 3) %}
        <li>
          <div class="card flow border-top p-top-300">
            <a class="card__title" href="{{ post.url }}">{{ post.data.title }}</a>
            <p class="card__description">{{ post.data.description }}</p>
            <time class="card__date dt-published" datetime="{{ post.date | datetimeFormat }}">{{ post.date | dateFormatted }}</time>
          </div>
        </li>
      {% endfor %}
      </ol>
      <a href="/blog/" class="cta cta--primary [ m-top-500 ]">All posts →</a>
    </div>
  </div>
</div>
<div class="layout-container">
  <div class="layout-container__inner [ p-top-600 p-bottom-700 ]">
    <div class="content-container flow">
      <h2 class="section-header section-header--secondary">Work &amp; <span>Projects</span></h2>
      <ol class="list-reset auto-grid m-top-500">
      {% set recentProjects = collections.projects | reverse %}
      {% for project in recentProjects.slice(0, 3) %}
        <li>
          <div class="card flow">
            <div class="card__image">
              {% image project.data.coverImage, project.data.title + " project screenshot", "(min-width: 45rem) 50vw, 100vw" %}
            </div>
            <a class="card__title" href="{{ project.url }}">{{ project.data.title }}</a>
            <p class="card__description">{{ project.data.description }}</p>
          </div>
        </li>
      {% endfor %}
      </ol>
      <a href="/projects/" class="cta cta--secondary [ m-top-500 ]">All Projects →</a>
    </div>
  </div>
</div>