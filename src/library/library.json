---
---
[
{% for post in site.categories.book %}
    {% assign booktags = "" %}

    {% for item in post.tags %}
        {% capture currentTag %}"{{ item }}"{% endcapture %}
        {% assign booktags = booktags | append: currentTag %}
    {% endfor %}
    {
        "author": "{{ post.author }}",
        "title": "{{ post.title }}",
        "description": "{{ post.description }}",
        "url": "{{ post.url }}",
        "cover": "{{ post.thumbnail }}",
        "buyLink": "{{ post.buy_link }}",
        "yearRead": "{{ post.year_read }}",
        "tags": [{{ booktags | replace: '""', '", "' }}]
    }{% unless forloop.last %},{% endunless %}
{% endfor %}
]