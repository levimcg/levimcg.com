  <div class="site-footer__inner container">
    <p class="site-footer__copyright">&copy; Levi McGranahan</p>
    <ul class="site-footer__links" role="list">
      {%- for link in site.links -%}
        <li>
          <a href="{{ link.url }}"{%- if link.me -%} rel="me"{%- endif -%}>{{ link.title }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</footer>