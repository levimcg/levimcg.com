<header class="site-header">
  <a class="skip-link" href="#main-content">Skip to content</a>
  <div class="site-header__inner [ container ]">
    <a class="site-header__logo" href="/" aria-label="{{ site.title }}">
      <svg aria-hidden="true" width="48" height="48">
        <use href="#logo"></use>
      </svg>
    </a>
    <nav class="site-header__nav" role="navigation" aria-label="Global">
      <ul role="list">
        {%- for item in collections.all | eleventyNavigation("Main") -%}
          <li>
            <a href="{{ item.url }}"{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.title }}</a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>