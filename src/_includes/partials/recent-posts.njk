<h2 class="section-header section-header--primary">Recent <span>posts</span></h2>
<ol class="list-reset auto-grid m-top-500">
{% set recentPosts = collections.post | reverse %}
{% for post in recentPosts.slice(0, 3) %}
  <li>
    <div class="card flow border-top p-top-300">
      <a class="card__title" href="{{ post.url }}">{{ post.data.title }}</a>
      <p class="card__description">{{ post.data.description }}</p>
      <div class="card__date">
        <svg aria-hidden="true" width="20" height="20">
          <use href="#calendar"></use>
        </svg>
        <time class="dt-published" datetime="{{ post.date | datetimeFormat }}">{{ post.date | dateFormatted }}</time>
      </div>
    </div>
  </li>
{% endfor %}
</ol>
