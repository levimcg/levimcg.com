---
layout: layouts/base.njk
---
{% from "partials/prev-next-nav.njk" import previousNextNav %}

<article>
  <div class="layout-container">
    <div class="layout-container__inner [ p-top-600 ]">
      <div class="content-container">
        {% include "partials/article-header.njk" %}
      </div>
    </div>
  </div>

  <div class="layout-container">
    <div class="layout-container__inner [ p-top-600 p-bottom-500 ]">
      <div class="article-layout content-container">
        {% if about %}
        <div class="article-layout__aside [ post flow ]">
          <h2>About</h2>
          {{ about | markdownify | safe }}
        </div>
        {% endif %}
        <div class="article-layout__main post flow">
          {{ content | safe }}
          {{ previousNextNav(collections.projects, page) }}
        </div>
      </div>
    </div>
  </div>

</article>