---
layout: layouts/base.njk
---
<article class="post-container">
  <div class="post flow">
    <div class="post-header">
      <a class="post-header__back-link" href="/projects/">
        <span>Projects</span>
      </a>
      <h1 class="post-header__title">{{ title }}</h1>
      <p class="post-header__description">{{ description }}</p>
      <div class="post-header__metadata">
        <dl class="project-info [ flex-grow ]">
          <div>
            <dt>My role</dt>
            <dd>{{ myRole }}</dd>
          </div>
          <div>
            <dt>When</dt>
            <dd>{{ projectDate }}</dd>
          </div>
          <div>
            <dt>For</dt>
            <dd>{{ client }}</dd>
          </div>
        </dl>
      </div>
    </div>

    {{ content | safe }}
  </div>
</article>