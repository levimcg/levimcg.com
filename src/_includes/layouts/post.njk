---
layout: layouts/base.njk
---
{% from 'partials/prev-next-nav.njk' import previousNextNav %}
<article>
  <a href="/blog/">
    <span>‚Üê Blog</span>
  </a>
  <h1>{{ title }}</h1>
  <time>{{ date | dateFormatted }}</time>
  <div class="tag-list">
    <span class="sr-only" id="tags-label-{{ title | slugify }}">Post tags</span>
    <ul role="list" aria-labelledby="tags-label-{{ title | slugify }}">
      {% for tag in tags %}
      {% if tag != "post" %}
      <li><a href="/tags/{{ tag | slugify }}"><span>#</span>{{ tag }}</a></li>
      {% endif %}
      {% endfor %}
    </ul>
  </div>
  {{ content | safe }}
  {{ previousNextNav(collections.post, page) }}
</article>