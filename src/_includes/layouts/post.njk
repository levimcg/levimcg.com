{% extends 'layouts/base.njk' %}

{% block main %}
  <article class="mcg-wrapper h-entry">
    {% include 'components/post-header.njk' %}
    <hr class="mcg-mt-lg">
    <div class="mcg-longform mcg-pt-lg">
      {{ content | safe }}
    </div>
    {% if footnote %}
    <div class="mcg-footnotes">
      {{ footnote | safe }}
    </div>
    {% endif %}
  </article>
  <div class="mcg-wrapper mcg-wrapper--full mcg-wrapper--shorter">
    {% include "components/prev-next-nav.njk" %}
  </div>
{% endblock %}