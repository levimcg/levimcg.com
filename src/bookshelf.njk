---
title: Bookshelf
bodyClass: mcg-bookshelf-page
lazyLoad: true
---
{% extends 'layouts/base.njk' %}

{% block main %}
  <div class="mcg-wrapper mcg-wrapper--full">
    <h1 class="mcg-sr-only">{{ title }}</h1>
    <ol class="mcg-grid mcg-grid--gallery">
      {% for post in collections.book | reverse %}
      <li>
        <div class="mcg-card">
          <img class="lazyload mcg-card__image" data-src="{{ post.data.thumbnail }}" alt="">
          <h2 class="mcg-card__title">{{ post.data.title }}</h2>
          <span class="mcg-card__meta">{{ post.data.author }}</span>
        </div>
      </li>
      {% endfor %}
    </ol>
  </div>
{% endblock %}