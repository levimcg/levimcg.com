---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - post
permalink: /tags/{{ tag | slugify }}/
---
<article class="container content">
  <h1 class="section-heading">
    <span class="font-weight-regular color-text-medium">Tagged /</span> {{ tag }}
  </h1>

  <hr>
  
  {% set taglist = collections[ tag ] %}
  <ol class="post-list">
      {%- for post in taglist | reverse -%}
      <li>
        <article class="post-teaser">
          <div class="post-teaser__meta">
            <time class="meta-date">{{ post.date | dateFormatted }}</time>
          </div>
          <div class="post-teaser__body [ flow ]">
            <a class="post-teaser__title" href="{{ post.url }}">{{ post.data.title }}</a>
            <p>{{ post.data.description }}</p>

            <div class="tag-list">
              <span class="sr-only" id="tags-label-{{ loop.index }}">Post tags</span>
              <ul role="list" aria-labelledby="tags-label-{{ loop.index }}">
                {% for tag in post.data.tags %}
                {% if tag != "post" %}
                <li><a href="/tags/{{ tag | slugify }}">#{{ tag }}</a></li>
                {% endif %}
                {% endfor %}
              </ul>
            </div>

          </div>
        </article>
      </li>
      {%- endfor -%}
    </ol>
  
</article>