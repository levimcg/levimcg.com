---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - post
    - sortedBooks
    - latestPosts
    - artwork
permalink: /tags/{{ tag | slug }}/
---
{% extends 'layouts/base.njk' %}

{% block main %}
<article class="h-entry">
  <h1>Posts tagged “{{ tag }}”</h1>

  <ol>
  {% set taglist = collections[ tag ] %}
  {% for post in taglist | reverse %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
  {% endfor %}
  </ol>
</article>  
{% endblock main %}