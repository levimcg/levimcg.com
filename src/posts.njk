{% extends 'layouts/base.njk' %}

{% block main %}
  <section>
    <h1>{{ title }}</h1>
    <ol>
      {%- for post in collections.post | reverse -%}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </li>
      {%- endfor -%}
    </ol>
  </section>
{% endblock %}